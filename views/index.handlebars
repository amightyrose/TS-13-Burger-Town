<div class="container bg-warning py-3">

	<h1 class="jumbotron text-center bg-info">Burger Town!</h1>


	<main class="row mx-0">

		<div class="col pr-5">

			<ul class="list-group">
				<li class="list-group-item active"><h4 class="mb-0">Menu</h4></li>
				{{#each burgers}}
				{{#unless devoured}}
				<li class="list-group-item">
					{{burger_name}}
					<button data-id="{{id}}" class="float-right eat-button">Eat it!</button>
				</li>
				{{/unless}}
				{{/each}}
			</ul>
		</div>

		<div class="col pl-5 text-right">
			<ul class="list-group">
				<li class="list-group-item active"><h4 class="mb-0">Burgers you have eaten</h4></li>
				{{#each burgers}}
				{{#if devoured}}
				<li class="list-group-item">
					{{burger_name}}
				</li>
				{{/if}}
				{{/each}}
			</ul>
		</div>

	</main>


	<div class="jumbotron row m-0 bg-danger text-white" id="footer">
		<div class="col text-center">
			<h2>Add a Burger</h2>
			<form id="newBurgerForm" class="">

				<div class="form-group">
					<label for="burgerName">Burger Name:</label>
					<input type="text" id="burgerName" name="burgerName">
				</div>

				<button type="submit" class="btn btn-success border-dark">Add Burger</button>

			</form>
		</div>
	</div>

</div>